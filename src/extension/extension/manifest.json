{
  "manifest_version": 3,
  "name": "YouTube Music Separator",
  "version": "1.0",
  "description": "Real-time music separation for YouTube using local AI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "ws://localhost:8000/*",
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ]
}
